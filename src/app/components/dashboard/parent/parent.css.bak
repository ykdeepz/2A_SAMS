:root{--accent:#2b2f77;--muted:#6b7280}
.dashboard{font-family:Arial,Helvetica,sans-serif;padding:16px}
.dashboard-header h1{margin:0;color:var(--accent)}
.dashboard-header .sub{margin:4px 0 12px;color:var(--muted)}
.summary{display:flex;gap:12px;margin-bottom:18px}
.summary-card{background:#fff;border-radius:8px;padding:12px;box-shadow:0 1px 3px rgba(0,0,0,.08);flex:1;text-align:center}
.content{display:flex;gap:16px}
.main{flex:1}
.subjects{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:12px}
.subject-card{background:#fff;padding:12px;border-radius:8px;box-shadow:0 1px 3px rgba(0,0,0,.06)}
.action{background:var(--accent);color:#fff;border:none;padding:8px 10px;border-radius:6px;cursor:pointer}
.sidebar{width:260px}
.quick-action{background:#fff;padding:12px;border-radius:8px;box-shadow:0 1px 3px rgba(0,0,0,.06);margin-bottom:12px}
.scanner-box{height:96px;background:#f3f4f6;border-radius:6px;display:flex;align-items:center;justify-content:center;color:var(--muted)}
.manual{margin-top:8px;width:100%;padding:8px;border-radius:6px;border:1px solid #ddd;background:#fff;cursor:pointer}
.upcoming ul{padding-left:18px;margin:8px 0}
.header-left{display:inline-block}
.header-actions{float:right}
.logout{background:#fff;border:1px solid #ddd;padding:6px 10px;border-radius:6px;cursor:pointer}
